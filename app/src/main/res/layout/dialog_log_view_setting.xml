<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".presentation.log_view.LogViewFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_verbose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Verbose" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_debug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Debug" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_warn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Warn" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_assert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Assert" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
